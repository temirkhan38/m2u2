import telebot
import os
from random import choice
from settings import TG_BOT_API


bot = telebot.TeleBot(TG_BOT_API)


eco_facts = [
    "–ü–ª–∞—Å—Ç–∏–∫–æ–≤–∞—è –±—É—Ç—ã–ª–∫–∞ —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è –ø—Ä–∏–º–µ—Ä–Ω–æ 450 –ª–µ—Ç.",
    "–°—Ç–µ–∫–ª–æ –º–æ–∂–Ω–æ –ø–µ—Ä–µ—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å –±–µ—Å–∫–æ–Ω–µ—á–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä–∞–∑.",
    "–û–∫–æ–ª–æ 30% –º–∏—Ä–æ–≤—ã—Ö –æ—Ç—Ö–æ–¥–æ–≤ ‚Äî —ç—Ç–æ —É–ø–∞–∫–æ–≤–∫–∞.",
    "–î–æ 40% –≤—Å–µ–π –µ–¥—ã –≤—ã–±—Ä–∞—Å—ã–≤–∞–µ—Ç—Å—è, —Ö–æ—Ç—è –º–æ–≥–ª–∞ –±—ã –±—ã—Ç—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∞.",
    "–ö–∞–∂–¥—ã–π —á–µ–ª–æ–≤–µ–∫ –≤ —Å—Ä–µ–¥–Ω–µ–º –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç 1‚Äì1.5 –∫–≥ –º—É—Å–æ—Ä–∞ –≤ –¥–µ–Ω—å."
]

eco_tips = [
    "–ò—Å–ø–æ–ª—å–∑—É–π –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—ã–µ —Å—É–º–∫–∏ –≤–º–µ—Å—Ç–æ –ø–ª–∞—Å—Ç–∏–∫–æ–≤—ã—Ö –ø–∞–∫–µ—Ç–æ–≤.",
    "–û—Ç–∫–∞–∂–∏—Å—å –æ—Ç –æ–¥–Ω–æ—Ä–∞–∑–æ–≤–æ–π –ø–æ—Å—É–¥—ã ‚Äî –≤–æ–∑—å–º–∏ –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—É—é –∫—Ä—É–∂–∫—É –∏ –±—É—Ç—ã–ª–∫—É.",
    "–í—ã–±–∏—Ä–∞–π —Ç–æ–≤–∞—Ä—ã –±–µ–∑ –ª–∏—à–Ω–µ–π —É–ø–∞–∫–æ–≤–∫–∏.",
    "–ò—Å–ø–æ–ª—å–∑—É–π —ç–ª–µ–∫—Ç—Ä–æ–Ω–Ω—ã–µ —á–µ–∫–∏ –≤–º–µ—Å—Ç–æ –±—É–º–∞–∂–Ω—ã—Ö.",
    "–ü–µ—Ä–µ—Ö–æ–¥–∏ –Ω–∞ –ø–µ—Ä–µ—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º—ã–µ –º–∞—Ç–µ—Ä–∏–∞–ª—ã ‚Äî –º–µ—Ç–∞–ª–ª, —Å—Ç–µ–∫–ª–æ, –±—É–º–∞–≥—É."
]

@bot.message_handler(commands=['start'])
def start(message):
    bot.send_message(
        message.chat.id,
        "üåø –ü—Ä–∏–≤–µ—Ç! –Ø –≠–ö–û-–±–æ—Ç.\n"
        "–ü–æ–º–æ–≥–∞—é –ª—é–¥—è–º –∑–∞–±–æ—Ç–∏—Ç—å—Å—è –æ–± –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥–µ –∏ —É–º–µ–Ω—å—à–∞—Ç—å –æ—Ç—Ö–æ–¥—ã üíö\n\n"
        "–í–æ—Ç —á—Ç–æ —è —É–º–µ—é:\n"
        "/fact ‚Äî –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π —ç–∫–æ-—Ñ–∞–∫—Ç\n"
        "/tips ‚Äî —Å–æ–≤–µ—Ç –ø–æ —É–º–µ–Ω—å—à–µ–Ω–∏—é –æ—Ç—Ö–æ–¥–æ–≤\n"
        "/recycle ‚Äî –∫–∞–∫ –ø—Ä–∞–≤–∏–ª—å–Ω–æ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –º—É—Å–æ—Ä\n"
        "/impact ‚Äî –≤—Ä–µ–º—è —Ä–∞–∑–ª–æ–∂–µ–Ω–∏—è —Ä–∞–∑–Ω—ã—Ö –º–∞—Ç–µ—Ä–∏–∞–ª–æ–≤\n"
    )

@bot.message_handler(commands=['fact'])
def fact(message):
    bot.send_message(message.chat.id, choice(eco_facts))

@bot.message_handler(commands=['tips'])
def tips(message):
    bot.send_message(message.chat.id, choice(eco_tips))

@bot.message_handler(commands=['recycle'])
def recycle(message):
    bot.send_message(
        message.chat.id,
        "‚ôªÔ∏è –ö–∞–∫ –ø—Ä–∞–≤–∏–ª—å–Ω–æ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –æ—Ç—Ö–æ–¥—ã:\n\n"
        "üü¶ –ü–ª–∞—Å—Ç–∏–∫ ‚Äî –ø—Ä–æ–º—ã—Ç—å, —Å–∂–∞—Ç—å, —É–±—Ä–∞—Ç—å –∫—Ä—ã—à–∫–∏\n"
        "üü® –ë—É–º–∞–≥–∞ ‚Äî –±–µ–∑ –∂–∏—Ä–∞ –∏ –≥—Ä—è–∑–∏, —É–±—Ä–∞—Ç—å —Å–∫–æ–±—ã\n"
        "üü© –°—Ç–µ–∫–ª–æ ‚Äî –ø—Ä–æ–º—ã—Ç—å, –∫—Ä—ã—à–∫–∏ –æ—Ç–¥–µ–ª—å–Ω–æ\n"
        "üü• –ú–µ—Ç–∞–ª–ª ‚Äî –±–∞–Ω–∫–∏ —Å–ø–ª—é—â–∏—Ç—å\n"
        "üü´ –û—Ä–≥–∞–Ω–∏–∫–∞ ‚Äî –º–æ–∂–Ω–æ –∫–æ–º–ø–æ—Å—Ç–∏—Ä–æ–≤–∞—Ç—å üå±"
    )

@bot.message_handler(commands=['impact'])
def impact(message):
    bot.send_message(
        message.chat.id,
        "‚è≥ –í—Ä–µ–º—è —Ä–∞–∑–ª–æ–∂–µ–Ω–∏—è –ø—Ä–µ–¥–º–µ—Ç–æ–≤:\n\n"
        "üõç –ü–ª–∞—Å—Ç–∏–∫–æ–≤—ã–π –ø–∞–∫–µ—Ç ‚Äî 200 –ª–µ—Ç\n"
        "ü•§ –ü–ª–∞—Å—Ç–∏–∫–æ–≤–∞—è –±—É—Ç—ã–ª–∫–∞ ‚Äî 450 –ª–µ—Ç\n"
        "üçæ –°—Ç–µ–∫–ª—è–Ω–Ω–∞—è –±—É—Ç—ã–ª–∫–∞ ‚Äî 1000 –ª–µ—Ç\n"
        "üì∞ –ë—É–º–∞–≥–∞ ‚Äî 2 –º–µ—Å—è—Ü–∞\n"
        "üçé –Ø–±–ª–æ—á–Ω—ã–π –æ–≥—Ä—ã–∑–æ–∫ ‚Äî 2 –Ω–µ–¥–µ–ª–∏\n"
    )

bot.infinity_polling()
